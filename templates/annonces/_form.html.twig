{{ form_start(form) }}
<p>Ajouter un titre</p>
<span>Maximum 80 caractères</span>
{{ form_row(form.title) }}
<p>Ajouter une meta description</p>
<span>Maximum 156 caractères</span>
{{ form_row(form.metaDescription) }}
<p>Ajouter une description du bien</p>
<span>Maximum 156 caractères</span>
{{ form_row(form.descriptionDuBien) }}
<p>Coup de coeur</p>
<span>Maximum 3 biens coup de coeur</span>
{% for child in form.coupDeCoeur %}
    <div class="containerRadio">
        {{- form_widget(child) -}}
        {{- form_label(child, null) -}}
        <span class="checkmark"></span>
    </div>
{% endfor %}
<div class="honoraire-bloc">
    <div class="honoraire-bloc-input">
        <p>Prix avec honoraires</p>
        {{ form_row(form.prixAvecHonoraires) }}
    </div>
    <div>
        <p>Prix sans honoraires</p>
        {{ form_row(form.prixSansHonoraires) }}
    </div>
</div>
<p>Type de bien</p>
{{ form_row(form.typeDeBien) }}
<p>Localisation</p>
{{ form_row(form.localisation) }}

<p>Ajouter une image de mise en avant</p>
 <div class="upload-1">
 {{ form_row(form.ImageEnAvant,{'attr': {'class': 'article_photoEnAvant', 'onchange':"handleFilesAvant(files)",'id' : 'upload', 'multiple name': 'file'}}) }}
    <div class="preview-image">
        <label for="upload">
            <span id="previewAvant">
                {% if app.request.attributes.get('_route') == 'annonces_edit' %}
                    {% if annonce.ImageEnAvant != null %}
                        <img class="image-preview" src="{{ asset('/uploads/'~annonce.ImageEnAvant.name) }}" alt="">
                    {% endif %}
                 {% endif %}
            </span>
        </label>
    </div>
 <span id="file-select-button-1" class="browse button black">{% if app.request.attributes.get('_route') == 'annonces_new' %}Ajouter une photo {% endif %}{% if app.request.attributes.get('_route') == 'annonces_edit' %}Modifier la photo {% endif %}<i class="fa fa-plus"></i></span>
 </div>

<p>Ajouter deux images du bien</p>
<span>Maximum 2 photos</span>
<div class="upload-2">
    {{ form_row(form.imageDuo,{'attr': {'class': 'article_photoDeFond', 'onchange':"handleFilesFond(files)",'id' : 'upload', 'multiple name': 'file'}}) }}
    <div class="preview-image">
        <label for="upload">
            <span id="previewFond">
 {% if app.request.attributes.get('_route') == 'annonces_edit' %}
     {% if annonce.imagesduo != null %}
         {% for image in annonce.imagesDuo %}
             <div class="imageFormPreview">
                    <img src="{{ asset('/uploads/'~image.name) }}" alt="">
                    <a href="{{ path('annonces_delete_image_duo', {id: image.id}) }}" data-delete
                     data-token="{{ csrf_token('delete' ~ image.id ) }}"><i class="fas fa-trash fa-2x"></i></a>
             </div>
         {% endfor %}
     {% endif %}
 {% endif %}
            </span>
        </label>
    </div>
    <span id="file-select-button-2" class="browse button black">Ajouter une photo <i class="fa fa-plus"></i></span>
</div>



{% extends 'base.html.twig' %}

{% block title %}Jade Immobilier - {{ annonce.title }}{% endblock %}

{% block body %}
<section class="container-main">
    <div class="container-header-main">
        {{ include('_include/_mainNavigationBlack.html.twig') }}
    </div>
</section>

<section class="container-large container-house">
    <div class="bloc-house">
        <div class="bloc-house_row">
            <h1><span class="title-anim-bis">{{ annonce.title }}</span></h1>
            <p>
                {{ annonce.descriptionDuBien }}
            </p>

        </div>
        <div class="bloc-house_row">
            <div>
                <p class="house-item_bold">Surface habitable</p>
                <p>{{ annonce.surfaceHabitable}} m2</p>
            </div>
            <div>
                <p class="house-item_bold">Chambres</p>
                <p>{{ annonce.nombreDeChambre }}</p>
            </div>
            <div>
                <p class="house-item_bold">Prix <span>avec honoraires</span></p>
                <p>{{ annonce.prixAvecHonoraires|number_format(0,'.',' ')}} €</p>
            </div>
            <div>
                <p class="house-item_bold">Prix <span>sans honoraires</span></p>
                <p>{{ annonce.prixSansHonoraires|number_format(0,'.',' ')}} €</p>
            </div>
        </div>
    </div>
    <div class="bloc-house_cadre-img">
        {% if annonce.statutDeVente != null %}
            <div class="bandeau-image">
                {{ annonce.statutDeVente }}
            </div>
        {% endif %}
        <img src="{{ asset('/uploads/'~annonce.imageEnAvant) }}" alt="">
    </div>
</section>

<section class="container-large container-house_img">
    {% for image in annonce.imagesDuo %}
    <div class="house_cadre-img">
        <img src="{{ asset('/uploads/'~image.name) }}" alt="">
    </div>
    {% endfor %}
</section>

<section class="container-medium container-house-desc">
    <div>
        <h2>Surfaces</h2>
        <div>
            <p class="house-item_bold">Surface habitable</p>
            <p>{{ annonce.surfaceHabitable}} m2</p>
        </div>
        <div>
            <p class="house-item_bold">Surface du terrain</p>
            <p>{{ annonce.surfaceDuTerrain}} m2</p>
        </div>
        {% if  annonce.surfaceDeLaTerrasse %}
        <div>
            <p class="house-item_bold">Surface de la terrasse</p>
            <p>{{ annonce.surfaceDeLaTerrasse }} m2</p>
        </div>
        {% endif %}
    </div>

    <div>
        <h2>Habitation</h2>
        <div>
            <p class="house-item_bold">pièces</p>
            <p>{{ annonce.nombreDePiece }}</p>
        </div>
        <div>
            <p class="house-item_bold">Chambres</p>
            <p>{{ annonce.nombreDeChambre }}</p>
        </div>
        <div>
            <p class="house-item_bold">Salle de bain</p>
            <p>{{ annonce.nombreDeSalleDeBain }}</p>
        </div>
        <div>
            <p class="house-item_bold">Toilettes</p>
            <p>{{ annonce.nombreDeToilettes }}</p>
        </div>
        <div>
            <p class="house-item_bold">Nombre d'étage</p>
            <p>{{ annonce.nombreEtages }}</p>
        </div>
        {% if annonce.cheminee %}
        <div>
            <p class="house-item_bold">Cheminée</p>
            <p>Oui</p>
        </div>
        {% endif %}
    </div>

    <div>
        <h2>Extérieur</h2>
        {% if annonce.piscine %}
        <div>
            <p class="house-item_bold">Piscine</p>
            <p>Oui</p>
        </div>
        {% endif %}
        {% if annonce.garage %}
        <div>
            <p class="house-item_bold">Garage</p>
            <p>Oui</p>
        </div>
        {% endif %}
        {% if annonce.balcon %}
        <div>
            <p class="house-item_bold">Balcon</p>
            <p>Oui</p>
        </div>
        {% endif %}
        {% if annonce.parking %}
            <div>
                <p class="house-item_bold">Parking</p>
                <p>Oui</p>
            </div>
        {% endif %}
        {% if annonce.jardin %}
            <div>
                <p class="house-item_bold">Jardin</p>
                <p>Oui</p>
            </div>
        {% endif %}
        {% if annonce.cave %}
            <div>
                <p class="house-item_bold">Cave</p>
                <p>Oui</p>
            </div>
        {% endif %}
    </div>

    <div>
        <h2>Autres</h2>

        <div>
            <p class="house-item_bold">Gardien</p>
            {% if annonce.gardien %}
            <p>Oui</p>
            {% else %}
            <p>Non</p>
            {% endif %}
        </div>

        <div>
            <p class="house-item_bold">Sécurité</p>
            {% if annonce.systemDeSecurite %}
                <p>{{ annonce.systemDeSecurite }}</p>
            {% else %}
                <p>Aucun système de sécurité</p>
            {% endif %}

        </div>
    </div>
</section>

<section class="container-bg container-carousel">
    <div>
        <h2>La galerie photos</h2>
        <div class="carousel carousel-bien">
            {% for img in annonce.photosGalerie %}
            <img src="{{ asset('/uploads/'~img.name) }}" alt="">
            {% endfor %}
        </div>

        <div class="onsale-button-bloc onsale-button-galerie prevandnext">
            <div class="button-prev prev">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="24" width="24">
                    <path xmlns="http://www.w3.org/2000/svg" d="M14.7071 5.29289C15.0976 5.68342 15.0976 6.31658 14.7071 6.70711L9.41421 12L14.7071 17.2929C15.0976 17.6834 15.0976 18.3166 14.7071 18.7071C14.3166 19.0976 13.6834 19.0976 13.2929 18.7071L7.29289 12.7071C6.90237 12.3166 6.90237 11.6834 7.29289 11.2929L13.2929 5.29289C13.6834 4.90237 14.3166 4.90237 14.7071 5.29289Z" fill="#FFFFFF"></path>
                </svg>
            </div>
            <div class="button-next next">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" height="24" width="24">
                    <path xmlns="http://www.w3.org/2000/svg" d="M14.7071 5.29289C15.0976 5.68342 15.0976 6.31658 14.7071 6.70711L9.41421 12L14.7071 17.2929C15.0976 17.6834 15.0976 18.3166 14.7071 18.7071C14.3166 19.0976 13.6834 19.0976 13.2929 18.7071L7.29289 12.7071C6.90237 12.3166 6.90237 11.6834 7.29289 11.2929L13.2929 5.29289C13.6834 4.90237 14.3166 4.90237 14.7071 5.29289Z" fill="#FFFFFF"></path>
                </svg>
            </div>
        </div>
    </div>
</section>

<section class="container-large">
    <div class="container-contact border-top-bottom">
        <h2>Ce bien vous intéresse ? <br>N’hésitez pas à nous contacter.</h2>
        <div class="button-1">
            <a href="{{ path('contact') }}">Contactez-nous</a>
        </div>
    </div>
</section>
{{ include('_include/_mainFooter.html.twig') }}
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/slick.min.js') }}"></script>
    <script src="{{ asset('js/carousel-2.js') }}"></script>
{% endblock %}